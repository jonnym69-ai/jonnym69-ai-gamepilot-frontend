{
  "version": 2,
  "rootDirectory": "apps/web",
  "buildCommand": "mv package.standalone.json package.json && npm install && npm run build",
  "outputDirectory": "dist",
  "installCommand": "mv package.standalone.json package.json && npm install",
  "devCommand": "npm run dev",
  "env": {
    "VITE_SUPABASE_URL": "@supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "VITE_API_URL": "https://gamepilot-main.onrender.com",
    "VITE_ENABLE_STEAM_INTEGRATION": "true"
  }
}
