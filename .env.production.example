# GamePilot Production Environment Configuration
# IMPORTANT: Never commit this file to version control

# Application
NODE_ENV=production
PORT=3001

# API Configuration
VITE_API_URL=https://yourdomain.com
VITE_API_TIMEOUT=30000

# Security (Generate strong random keys - minimum 32 characters)
JWT_SECRET=your-actual-secure-jwt-secret-key-min-32-chars-here
SESSION_SECRET=your-actual-secure-session-secret-key-here
VITE_SESSION_TIMEOUT=7d

# Database (Use production database URL)
DATABASE_URL=postgresql://user:password@host:5432/gamepilot_prod
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24h

# Database Connection Pool (PostgreSQL)
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_SSL_MODE=require

# HTTPS/SSL Configuration (Required for production)
HTTPS_ENABLED=true
SSL_KEY_PATH=/etc/ssl/private/gamepilot.key
SSL_CERT_PATH=/etc/ssl/certs/gamepilot.crt
SSL_CA_BUNDLE_PATH=/etc/ssl/certs/gamepilot-ca-bundle.crt
HTTP_REDIRECT_PORT=80

# Steam Integration (Get from https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=your-actual-steam-api-key-here
STEAM_WEB_API_KEY=your-actual-steam-web-api-key-here

# Discord Integration (Optional)
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# YouTube Integration (Optional)
YOUTUBE_API_KEY=your-youtube-api-key

# Analytics & Monitoring (Set up proper monitoring)
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting (Production-safe limits)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX_REQUESTS=50

# CORS Configuration (Your actual domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging (Production logging)
LOG_LEVEL=warn
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=false

# Feature Flags (Enable what you need)
VITE_ENABLE_STEAM_INTEGRATION=true
VITE_ENABLE_DISCORD_INTEGRATION=false
VITE_ENABLE_YOUTUBE_INTEGRATION=false
VITE_ENABLE_MOOD_ANALYSIS=true

# Analytics (Optional)
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_ID=your-analytics-id

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=1000
VITE_RATE_LIMIT_WINDOW=900000

# File Upload (Restrictive for production)
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,webp
