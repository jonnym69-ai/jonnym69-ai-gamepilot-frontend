# External Services
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_BOT_TOKEN=your-discord-bot-token

YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_API_URL=https://www.googleapis.com/youtube/v3

# Error Tracking & Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=GamePilot-Production
NEW_RELIC_LOG_LEVEL=info

# Analytics
GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=86400
CACHE_MAX_SIZE=1000

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=gamepilot-assets
CDN_URL=https://cdn.gamepilot.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=https://gamepilot.io
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/gamepilot/app.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5

# Feature Flags
ENABLE_STEAM_INTEGRATION=true
ENABLE_DISCORD_INTEGRATION=true
ENABLE_YOUTUBE_INTEGRATION=true
ENABLE_MOOD_ENGINE=true
ENABLE_RECOMMENDATIONS=true
ENABLE_ANALYTICS=true

# Performance Settings
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
STATIC_CACHE_TTL=31536000
API_CACHE_TTL=300

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=gamepilot-backups

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Development Overrides (for debugging)
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false
