{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://gamepilot-api.onrender.com",
    "VITE_API_BASE_URL": "https://gamepilot-api.onrender.com/api",
    "VITE_STEAM_API_KEY": "FBB124C9352519E8F9FE820ADF0DA87C",
    "VITE_APP_NAME": "GamePilot",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_ENABLE_STEAM_INTEGRATION": "true",
    "VITE_ENABLE_DISCORD_INTEGRATION": "true",
    "VITE_ENABLE_YOUTUBE_INTEGRATION": "true",
    "VITE_ENABLE_MOOD_ANALYSIS": "true",
    "NODE_ENV": "production"
  }
}
