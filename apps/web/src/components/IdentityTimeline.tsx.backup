interface TimelineProps {
  snapshots: IdentitySnapshot[];
  onRegenerateCard: (snapshot: IdentitySnapshot) => void;
  onDelete: (id: string) => void;
}

export const IdentityTimeline: React.FC<TimelineProps> = ({
  snapshots,
  onRegenerateCard,
  onDelete
}) => {
  const [expandedItems, setExpandedItems] = useState<Set<string>>(new Set());

  const handleToggle = (id: string) => {
    setExpandedItems(prev => {
      const newSet = new Set(prev);
      if (newSet.has(id)) {
        newSet.delete(id);
      } else {
        newSet.add(id);
      }
      return newSet;
    });
  };

  const handleRegenerateCard = (snapshot: IdentitySnapshot) => {
    // Create a temporary persona context from the snapshot
    const tempPersonaContext = {
      dominantMoods: snapshot.dominantMoods,
      preferredSessionLength: snapshot.preferredSessionLength as any,
      preferredTimesOfDay: snapshot.preferredTimesOfDay as any,
      recentPlayPatterns: snapshot.recentPlayPatterns,
      moodAffinity: {},
      averageSessionLengthMinutes: snapshot.averageSessionLengthMinutes,
      lateNightRatio: 0,
      completionRate: snapshot.completionRate,
      multiplayerRatio: snapshot.multiplayerRatio
    };

    // Create temporary games from snapshot
    const tempGames = snapshot.topIdentityGames.map(game => ({
      id: game.id,
      title: game.title,
      moods: [],
      genres: [],
      hoursPlayed: 0,
      sessionLength: snapshot.preferredSessionLength as any,
      recommendedTimes: snapshot.preferredTimesOfDay as any,
      score: game.score
    }));

    // Trigger card generation with snapshot data
    const event = new CustomEvent('generate-card-from-snapshot', {
      detail: {
        personaContext: tempPersonaContext,
        identityDefiningGames: tempGames,
        identityNarrative: snapshot.shortNarrative,
        fullNarrative: snapshot.fullNarrative
      }
    });
    
    window.dispatchEvent(event);
  };

  if (snapshots.length === 0) {
    return (
      <div className="identity-history-empty">
        <div className="empty-state-icon">üï∞Ô∏è</div>
        <h3>No History Yet</h3>
        <p>Your gaming identity journey will be captured here over time.</p>
        <p>Continue playing and generating identity cards to build your timeline.</p>
      </div>
    );
  }

  return (
    <div className="identity-history">
      <div className="identity-history-header">
        <h2>Your Evolution</h2>
        <div className="identity-history-stats">
          <div className="history-stat">
            <div className="history-stat-number">{snapshots.length}</div>
            <div className="history-stat-label">Snapshots</div>
          </div>
          {snapshots.length > 1 && (
            <div className="history-stat">
              <div className="history-stat-number">
                {snapshots.length > 1 ? 
                  Math.round((snapshots[0].timestamp ? 
                    (new Date().getTime() - new Date(snapshots[0].timestamp).getTime()) / 
                    (1000 * 60 * 60 * 24) 
                  : 0)) : 0
                }
              </div>
              <div className="history-stat-label">Days Ago</div>
            </div>
          )}
        </div>
      </div>

      <div className="timeline">
        {snapshots.map((snapshot, index) => (
          <TimelineItem
            key={snapshot.id}
            snapshot={snapshot}
            isExpanded={expandedItems.has(snapshot.id)}
            onToggle={handleToggle}
            onRegenerateCard={handleRegenerateCard}
            onDelete={onDelete}
          />
        ))}
      </div>
    </div>
  );
};

