# Production Environment Configuration
# Environment variables for production deployment

# Application Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# API Configuration
REACT_APP_API_URL=https://api.gamepilot.app
REACT_APP_WS_URL=wss://api.gamepilot.app
REACT_APP_ENVIRONMENT=production
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_ID=prod-build-$(date +%Y%m%d%H%M%S)

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_USER_ANALYTICS=true

# Third-party Services
REACT_APP_SENTRY_DSN=your-sentry-dsn
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# CDN Configuration
REACT_APP_CDN_URL=https://cdn.gamepilot.app
REACT_APP_ASSET_URL=https://assets.gamepilot.app

# Security Configuration
REACT_APP_CSRF_SECRET=your-csrf-secret-key
REACT_APP_SESSION_SECRET=your-session-secret-key

# Performance Configuration
REACT_APP_CACHE_TTL=3600
REACT_APP_CACHE_MAX_SIZE=1000
REACT_APP_API_TIMEOUT=30000

# Logging Configuration
REACT_APP_LOG_LEVEL=info
REACT_APP_LOG_FORMAT=json
