# GamePilot Environment Configuration

# Application
NODE_ENV=development
PORT=3001

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=10000

# Security (CRITICAL - Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-characters
SESSION_SECRET=your-session-secret-change-in-production
VITE_SESSION_TIMEOUT=7d

# Database
DATABASE_URL=./database.sqlite
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24h

# Steam Integration
STEAM_API_KEY=your-steam-api-key
STEAM_WEB_API_KEY=your-steam-web-api-key

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# YouTube Integration
YOUTUBE_API_KEY=your-youtube-api-key

# Analytics & Monitoring
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3005,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Feature Flags
VITE_ENABLE_STEAM_INTEGRATION=true
VITE_ENABLE_DISCORD_INTEGRATION=true
VITE_ENABLE_YOUTUBE_INTEGRATION=true
VITE_ENABLE_MOOD_ANALYSIS=true

# Analytics (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=your-analytics-id

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp
